<h1>Applications</h1>

<p>Name: <%= @application.name %> </p>
<p>Street address: <%= @application.street_address %> </p>
<p>City: <%= @application.city %> </p>
<p>State: <%= @application.state %> </p>
<p>Zip code: <%= @application.zip_code %> </p>
<p>Description: <%= @application.description %> </p>
<p>Status: <%= @application.status %> </p>

    <% @application.pets.each do |pet| %> 
      <p> <%= pet.name %> </p>
    <% end %>

 <section id="addPet" > 

 <h2> Add a Pet to this Application </h2>

<%= form_with url: "/applications/#{@application.id}?search=search_pet", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search Pets By Name" %>
<% end %>



 </section>
